    <img src="https://petset.com/wp-content/uploads/2016/05/Top-10-Most-Famous-Internet-Cats-09-Garfi-the-Angry-Cat-300x300.jpg" alt="Фото">
    <div id="name" class="bordered">Имя: <span id="firstName">Михаил</span></div>
    <div id="surname" class="bordered">Фамилия: <span id="lastName">Синельников</span></div>
    <div class="bordered">Возраст: <span id="age">20</span></div>
    <input type="text" id="newLastName" placeholder="Новая фамилия">
    <input type="button" value="Изменить фамилию" onclick="changeLastName()">
    <input type="button" value="Изменить цвет фона" onclick="changeBgColor()">

    <script>
        function changeLastName() {
            var newLastName = document.getElementById('newLastName').value;
            if (newLastName) {
                document.getElementById('lastName').textContent = newLastName;
            }
        }

        function changeBgColor() {
            var randomColor = '#' + Math.floor(Math.random() * 16777215).toString(16);
            document.body.style.backgroundColor = randomColor;
        }
    </script>
